@model GalloFlix.Models.Genre
@{
    ViewData["Title"] = "GÃªneros";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row">
    <div class="col-lg-5 mx-auto">
        <div class="card my-4">
            <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                <div class="bg-gradient-dark shadow-secondary border-radius-lg pt-4 pb-3">
                    <h5 class="text-white text-capitalize ps-3">@ViewBag.Title</h5>
                    <h6 class="text-white text-capitalize ps-3">Adicionar</h6>
                </div>
            </div>
            <div class="card-body pb-2">
                <form asp-action="Create" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="col-12 mb-3">
                        <div class="input-group input-group-outline mb-1">
                            <label asp-for="Name" class="form-label"></label>
                            <input asp-for="Name" class="form-control" />
                        </div>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="mt-3">
                        <input type="submit" value="Salvar" class="btn btn-success me-3" />
                        <a asp-action="Index" class="btn btn-danger">Cancelar</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
